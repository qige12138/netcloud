//颜色
$color_th = rgb(45,45,45)
$color_ff = #fff
$color_66 = #666
$color_99 = #999
$bg_th = rgb(34,34,37)
//字体
$fonts_10 = 10px
$fonts_12 = 12px
$fonts_14 = 14px
$fonts_16 = 16px
$fonts_18 = 18px
$fonts_22 = 22px

font_s($num)
  font-size:$num

w($num)
  width:$num
h($num)
  height:$num
bg_image($url)
  background-image: url($url)
  background-size:100% 100%
bg_color($num)
  background-color:$num
lh($num)
  line-height:$num
overflow_h() 
  overflow:hidden
// 单行超出隐藏
overflow_t()
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
// 多行超出隐藏
ellipsis($num)
  overflow: hidden
  text-overflow: ellipsis
  display: -webkit-box
  -webkit-line-clamp: $num 
  -webkit-box-orient: vertical
// 去除按钮默认样式
btn() 
  user-select:none
  touch-action:manipulation
  border:none
  outline:none
  background:transparent



// 扩展点击区域
extend_click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
none()
  display:none
dis_inb()
  display:inline-block
bs()
  box-sizing:border-box
pl($num) 
  padding-left:$num
pr($num)
  padding-right:$num
pt($num) 
  padding-top:$num
pb($num)
  padding-bottom:$num
pad($num)
  padding:$num
pad_($num1,$num2)
  padding:$num1 $num2
re() 
  position:relative
ab()
  position:absolute
fi()
  position:fixed
  
//图片定比列
img_div($num)
  width:100%
  pt($num)
  re()
img_sc()
  ab()
  width:100%
  height:100%
  left:0
  top:0
bor_r($num)
  border-radius:$num
t_c() 
  text-align:center
t_l()
  text-align:left
t_r()
  text-align:right




   